{{#each posts as |post| }}
<div id="post-container">
    <a href="/post/{{post.id}}">
    <div id="post-header">
        <h1>{{post.title}}</h1>
        <p id="post-date">Posted by {{post.user.username}} on {{format_date post.created_at}}</p>
    </div>
    <div id="post-body">{{post.body}}</div>
    </a>
    
</div>
{{/each}}